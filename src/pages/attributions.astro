import { ASSETS_URL } from "../../static/utils/constants";
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="iGEM Crete | Attributions">
  <Navbar activeNav="team" />
  <div class="blend"></div>
  <div data-scroll-container class="container page">
    <div class="sideBar">
      <Sidebar
        items={[
          {
            mainPart: { title: "Team Members", id: "part1" },
            subParts: [],
          },
          {
            mainPart: { title: "Principal Investigators", id: "part2" },
            subParts: [],
          },
          {
            mainPart: { title: "Advisor", id: "part3" },
            subParts: [],
          },
          {
            mainPart: { title: "Outsourced Help", id: "part4" },
            subParts: [],
          },
        ]}
      />
    </div>

    <main>
      <div class="big-main-title" data-content="Attributions">Attributions</div>
      <section class="parts-container">
        <div id="part1" class="part scroll">
          <h1 class="part-title">Team Members</h1>

          <h3>Sotiris Marinos</h3>
          <p>
